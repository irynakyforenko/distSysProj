:local(.weather)
  border 1px solid black
  .reports 
    padding 10px
    height calc(100% - 20px)
    table
      height 100%
      width 100%
      border-collapse collapse
      table-layout: fixed;
      th, td
        border 1px solid black
        &:nth-of-type(1)
          width 140px
        &:nth-of-type(2)
          width 60px
        &:nth-of-type(3)
          width 400px
      thead tr
        display block
        background-color black
        color white
      tbody
        tr
          display block
        display block
        overflow auto 
        height 100%
        width 100%